@model ReflectionIT.Mvc.Paging.PagingList<GraficaOnline.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>


<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

<p>
    <a asp-action="Create">Cadastrar produto</a>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.SortableHeaderFor(model => model.Nome, "Nome")
                      |@*  @Html.DisplayNameFor(model => model.Nome)*@
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                       @Html.DisplayNameFor(model =>model.ImagemUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorCompra)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorVenda)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            <img src="@Html.DisplayNameFor(model => model.ImagemUrl)" class="img-fluid" width="200" height="150">
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorCompra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorVenda)
                        </td>
                        
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-dark">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-outline-secondary">Detalhe</a>
                            <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-outline-danger">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <vc:pager paging-list="@Model"></vc:pager> Total de Pedidos : @Model.TotalRecordCount
        </div>
    </div>
</div>