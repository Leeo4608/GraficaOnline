@model ReflectionIT.Mvc.Paging.PagingList<GraficaOnline.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

<p>
    <a asp-action="Create">Cadastrar categoria</a>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaNome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-dark">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-outline-secondary">Detalhe</a>
                            <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-outline-danger">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <vc:pager paging-list="@Model"></vc:pager> Total de Categorias : @Model.TotalRecordCount
        </div>
    </div>
</div>